{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "typedocOptions": {
      "out": "./docs/",
      "theme": "default",
      "name": "ObjectStream",
      "includeVersion": true,
      "hideGenerator": true
    }
  }